extends layout 

block content 
    h1= title
    div.container-fluid
        - let dest1 = `dispatch(\"/door/create")`
        button.btn( class="btn-success ml-1", onclick = dest1) Create
        div.row
            each item, index in result
                -let dest2 = `dispatch(\"/door/delete?id=${item._id}\")`
                - let dest3 = `dispatch(\"/door/detail?id=${item._id}\")`
                - let destination = `dispatch(\"/door/update?id=${item._id}\")`
                div.col-sm-2(onclick=`buy(${index})`) #{item["door_Name"]}, #{item["door_color"]}, #{item["door_height"]}
                    br
                    button.btn( class="btn-primary ml-1", onclick= destination) Update
                    br
                    button.btn( class="btn-warning ml-1", onclick= dest2) Delete
                    br
                    button.btn( class="btn-secondary ml-1", onclick= dest3) Details

    script. 
        function dispatch(path) {
            window.location.href=path
        }