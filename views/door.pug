extends layout

block content
    h1= title
    div.container-fluid
        div.row
            each item, index in result
                - let destination = `dispatch(\"/door/update?id=${item._id}\")`
                div.col-sm-2(onclick=`buy(${index})`)
                    | #{item["door_Name"]}, #{item["door_color"]}, #{item["door_height"]}
                    br
                    button.btn( class="btn-primary ml-1", onclick= destination) Update

    script.
        function dispatch(path) {
            window.location.href=path
        }
